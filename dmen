#!/usr/bin/env bash
# vim: fdm=marker:noai:ts=4:sw=4
#
# dmen
# Dmenu launch script
#
# Created by Dylan Araps
#
# Dependencies: bash, xrandr, awk, dmenu2

# Speed up script by not using unicode
export LC_ALL=C
export LANG=C

# Source colors
. "$HOME/.colors/colors.sh"

# Set primary monitor
case "$HOSTNAME" in
    "Winter") xrandr --output eDP-1 --primary ;;
    *) xrandr --output DVI-0 --primary ;;
esac

# Run dmenu with variables.
dmenu_run \
    -b -nb "$color0" -nf "$color7" -sb "$color7" -sf "$color8" -h "$bar_size" \
    -fn "${bar_font:-"-benis-lemon-medium-r-normal--10-110-75-75-m-50-ISO8859-1"}"


