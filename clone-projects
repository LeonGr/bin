#!/usr/bin/env bash
# Clone my github projects
#
# Created by Dylan Araps
#
# Dependencies: bash. git


# Repos to clone
repos=(
    "https://github.com/dylanaraps/neofetch"
    "https://github.com/dylanaraps/ryuuko"
    "https://github.com/dylanaraps/coal"
    "https://github.com/dylanaraps/startpage"
)


# Project folder

project_dir="$HOME/projects"

# Create the directory if it doesn't exist.
mkdir -p "$project_dir"

cd "$project_dir" || exit
for project in "${repos[@]}"; do
    printf "%s\n" "Cloning $project..."
    git clone "$project" 2>/dev/null
done

# cd back to previous directory.
cd - >/dev/null

